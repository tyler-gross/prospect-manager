<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Prospect Manager - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.2.1/css/responsive.dataTables.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="color: #e67e22;">Prospect Manager</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{ var thisController = ViewContext.RouteData.Values["controller"].ToString(); }
                    <li class="@(thisController == "Home" ? "active" : "")">
                        @Html.ActionLink("Prospects", "Index", "Home")
                    </li>
                    <li class="@(thisController == "colleges" ? "active" : "")">
                        @Html.ActionLink("Colleges", "Index", "colleges")
                    </li>
                    <li class="@(thisController == "positions" ? "active" : "")">
                        @Html.ActionLink("Positions", "Index", "positions")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" id="css-main-container">
        @RenderBody()
        <hr />
        <footer>
            <p>Web Design and Development by Tyler Gross - @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
